<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white_bg"
    android:padding="16dp"
    android:layout_marginBottom="8dp"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/userImageView"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile"
            app:shapeAppearanceOverlay="@style/FullCircleImageView"/>

        <TextView
            android:id="@+id/userNameTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Customer Name"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/orderIdTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID: #123456"
        android:textColor="@color/black"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/orderDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Date: 20 July 2025"
        android:textColor="@color/darkGrey"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/orderTotalTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Total: $150.00"
        android:textColor="@color/orange"
        android:textStyle="bold"
        android:textSize="18sp"/>
</LinearLayout>